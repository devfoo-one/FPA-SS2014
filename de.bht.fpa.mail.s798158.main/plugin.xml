<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.bht.fpa.mail.s798158.main.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="de.bht.fpa.mail.s798158.main.Perspective"
            id="de.bht.fpa.mail.s798158.main.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.bht.fpa.mail.s798158.main.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="de.bht.fpa.mail.s798158.main.commands.category"
            id="de.bht.fpa.mail.s798158.main.commands.sampleCommand"
            name="Sample Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.bht.fpa.mail.s798158.main.handlers.SetBaseDirectoryHandler"
            commandId="de.bht.fpa.mail.s798158.main.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="de.bht.fpa.mail.s798158.main.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="de.bht.fpa.mail.s798158.main.menus.sampleMenu"
               label="FS Navigation"
               mnemonic="M">
            <command
                  commandId="de.bht.fpa.mail.s798158.main.commands.sampleCommand"
                  id="de.bht.fpa.mail.s798158.main.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="de.bht.fpa.mail.s798158.main.toolbars.sampleToolbar">
            <command
                  commandId="de.bht.fpa.mail.s798158.main.commands.sampleCommand"
                  icon="icons/sample.gif"
                  id="de.bht.fpa.mail.s798158.main.toolbars.sampleCommand"
                  tooltip="Set Base Directory">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
